                            <Label FontSize="18" Height="50" Width="45" HorizontalAlignment="Right" Margin="0,0,5,0" HorizontalContentAlignment="Right">
                                <TextBlock Text="Visitas Evento" TextWrapping="WrapWithOverflow" Height="45" Width="60" FontSize="11" Margin="0,-2,0,0"/>
