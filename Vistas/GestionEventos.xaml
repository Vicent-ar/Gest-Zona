                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn x:Name="dataActivoEvento"  Width="25" CanUserResize="False" Binding="{Binding activoEvento}" Visibility="Hidden">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="Acti    vo" TextWrapping="Wrap"/>
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn x:Name="dataPaintingEvento" Header="Paint" CanUserResize="False" Binding="{Binding paintingEvento}" Visibility="Hidden"/>
                                    </DataGrid.Columns>
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontFamily" Value="Aharoni"/>
                                            <Setter Property="Height" Value="37"/>
                                            <Setter Property="Background" Value="Gray"/>
                                            <Setter Property="Foreground" Value="White"/>
