                                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">Solo lectura</TextBlock>
                                    </StackPanel>
                                </TextBox.ToolTip>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="6">
